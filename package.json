{
  "name": "yamashina",
  "version": "1.0.0",
  "displayName": "Yamashina",
  "author": "clarkdave",
  "description": "An extension to help learn Japanese words",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist/*",
    "watch": "pnpm run clean && parcel manifest.json --host localhost --target webext-dev",
    "build:firefox": "./bin/build-firefox.sh",
    "serve:firefox": "web-ext run --firefox=deved --start-url \"about:debugging#/runtime/this-firefox\"  --source-dir ./dist",
    "serve:chrome": "web-ext run -t chromium --start-url \"https://google.com\" --source-dir ./dist",
    "web-ext:lint": "web-ext lint --source-dir ./dist"
  },
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
  },
  "alias": {
    "preact/jsx-dev-runtime": "preact/jsx-runtime"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "node-fetch": "3"
      }
    }
  },
  "dependencies": {
    "@preact/signals": "^1.1.3",
    "@vanilla-extract/css": "^1.11.0",
    "classnames": "^2.3.2",
    "preact": "^10.13.2",
    "tslib": "^2.5.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.8.3",
    "@parcel/core": "^2.8.3",
    "@types/node": "^18.15.11",
    "@types/webextension-polyfill": "^0.10.0",
    "@vanilla-extract/parcel-transformer": "^1.0.0",
    "parcel": "^2.8.3",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "web-ext": "^7.6.0"
  }
}
